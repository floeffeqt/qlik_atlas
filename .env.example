# Database
POSTGRES_USER=atlas
POSTGRES_PASSWORD=atlas_password
POSTGRES_DB=atlas_db
DATABASE_URL=postgresql+asyncpg://atlas:atlas_password@db:5432/atlas_db

# App
APP_ENV=dev
PORT=8000

# JWT
JWT_SECRET=replace_this_with_a_secure_random_value
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Qlik API
QLIK_TENANT_URL=
QLIK_API_KEY=

# Customer credential encryption (required for storing customer credentials in DB)
# AES-256-GCM key: Base64-encoded 32 random bytes (keep stable once data exists)
CREDENTIALS_AES256_GCM_KEY_B64=REPLACE_WITH_BASE64_32_BYTE_KEY
CREDENTIALS_AES256_GCM_KEY_ID=local-dev-v1

# Frontend
VITE_API_URL=http://localhost:8000

# pgAdmin (optional, for PostgreSQL UI)
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=pgadmin@local.dev
PGADMIN_DEFAULT_PASSWORD=change_me_for_local_dev
